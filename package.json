    "@types/express": "^4.0.39",
    "@types/react": "^16.0.28",
    "@types/react-dom": "^16.0.3",
    "@types/showdown": "^1.7.2",
    "@types/webpack-dev-middleware": "^1.9.4",
    "@types/webpack-hot-middleware": "^2.16.2",
    "awesome-typescript-loader": "^3.4.1",
    "chai": "^4.1.2",
    "colors": "^1.1.2",
    "cross-env": "^5.1.1",
